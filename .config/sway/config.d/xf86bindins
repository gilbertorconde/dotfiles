bindsym XF86MonBrightnessUp exec $HOME/.config/sway/light.sh up
bindsym XF86MonBrightnessDown exec $HOME/.config/sway/light.sh down

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec $HOME/.config/sway/sound.sh up
bindsym XF86AudioLowerVolume exec $HOME/.config/sway/sound.sh down
bindsym XF86AudioMute exec amixer sset Master toggle


# Media player controls
bindsym XF86AudioPlay exec playerctl play
bindsym XF86AudioPause exec playerctl pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
